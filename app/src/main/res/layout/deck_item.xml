<?xml version="1.0" encoding="utf-8"?>
<androidx.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackTV">

        <TextView
                android:text="@string/deck_words_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deck_item_text_view_word_count"
                android:textSize="15sp"
                android:textColor="@color/colorTextDark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deck_item_text_view_word_count2"
                android:textSize="25sp"
                android:textColor="@color/colorTextDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/deck_item_text_view_word_count"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/deck_item_text_view_word_count"
                app:layout_constraintStart_toStartOf="@id/deck_item_text_view_word_count"/>
        <TextView
                android:id="@+id/deck_item_text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="25sp"
                android:textColor="@color/colorTextDark"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="@tools:sample/lorem"/>
        <!--<TextView-->
        <!--android:text="Уровень"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/deck_item_text_view_level"-->
        <!--android:textSize="18sp" android:layout_marginTop="8dp"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/deck_item_text_view_name" app:layout_constraintStart_toStartOf="parent"-->
        <!--android:layout_marginStart="8dp" android:layout_marginBottom="8dp"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"/>-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.widget.CardView>