<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_padding_8dp"
                tools:context=".ui.activity.addword.fragment.AddWordInDeckFragment">

    <TextView
            android:id="@+id/add_word_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="some text"
    />
    <View android:id="@+id/line1"
            android:layout_width="match_parent"
          android:layout_below="@id/add_word_title"
          android:layout_height="4dp"
          android:background="@color/grey"
    ></View>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/add_word_recycler"
            android:layout_below="@id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/add_word_bottom_btn"
    >

    </android.support.v7.widget.RecyclerView>

    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/grey"
            android:layout_above="@id/add_word_bottom_btn"
    ></View>

    <LinearLayout
            android:id="@+id/add_word_bottom_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
    >
        <Button

                android:id="@+id/add_word_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_word"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/add_word_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_word_save"
                android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>